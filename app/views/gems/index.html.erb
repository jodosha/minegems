<h1 class="title shadow">Gems</h1>

<div id="gems" class="list">
  <% if @rubygems.empty? %>
    You haven't added any gems yet. You can <%= link_to "upload", new_gem_path %> it now.
  <% else %>
    <table>
      <% @rubygems.each do |rubygem| %>
        <tr>
          <td><%= link_to rubygem.name_with_version, gem_path(rubygem) %></td>
          <td><%= rubygem.summary %></td>
        </tr>
      <% end %>
    </table>
  <% end %>

</div>